{
    "name": "cvuorinen/phpdoc-md",
    "description" : "PHP documentation generator, with markdown output",
    "keywords" : [ "PHP", "Markdown", "PHPDoc" ],
    "homepage" : "https://github.com/cvuorinen/phpdoc-md",
    "license" : "MIT",
    "require" : {
        "php" : ">=5.3.1",
        "twig/twig" : "~1.18.0"
    },
    "require-dev" : {
        "phpdocumentor/phpdocumentor" : "~2.8.0"
    },
    "authors" : [
        {
            "name" : "Evert Pot",
            "email" : "evert@rooftopsolutions.nl",
            "homepage" : "http://www.rooftopsolutions.nl/",
            "role" : "Developer"
        },
        {
            "name" : "Carl Vuorinen",
            "email" : "carl.vuorinen@gmail.com",
            "homepage" : "http://cvuorinen.net",
            "role" : "Developer"
        }
    ],
    "autoload" : {
        "psr-4" : {
            "PHPDocMD\\" : "src/"
        }
    },
    "bin" : [
        "bin/phpdocmd"
    ],
    "config" : {
        "bin-dir" : "bin"
    }
}
